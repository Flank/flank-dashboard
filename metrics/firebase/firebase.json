{
  "functions": {
    "predeploy": 
      "npm --prefix \"$RESOURCE_DIR\" run lint && npm --prefix \"$RESOURCE_DIR\" run build",    
    "source": "functions",
    "ignore": [
      ".dart_tool",      
      "node_modules",
      "pubspec.*",
      ".packages",
      "test",
      "build.yaml"
    ]
  },
  "firestore": {
    "rules": "firestore/rules/firestore.rules",
    "indexes": "firestore/indexes/firestore.indexes.json"
  }
}
